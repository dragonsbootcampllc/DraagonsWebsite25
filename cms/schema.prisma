datasource postgresql {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @default(cuid())
  username String @unique @default("")
  password String
}

model Blog {
  id              String   @id @default(cuid())
  type            String?  @default("blog")
  slug            String   @unique @default("")
  title           String   @default("")
  content         Json     @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  image_id        String?
  image_filesize  Int?
  image_width     Int?
  image_height    Int?
  image_extension String?
  company         Company? @relation("Blog_company", fields: [companyId], references: [id])
  companyId       String?  @map("company")
  challenge       String   @default("")
  solution        String   @default("")
  results         Json?    @default("[]")
  tags            Tag[]    @relation("Blog_tags")
  status          String?  @default("drafted")

  @@index([companyId])
}

model FAQ {
  id         String    @id @default(cuid())
  category   Category? @relation("FAQ_category", fields: [categoryId], references: [id])
  categoryId String?   @map("category")
  question   String    @default("")
  answer     Json      @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")

  @@index([categoryId])
}

model Company {
  id                  String     @id @default(cuid())
  name                String     @unique @default("")
  size                String     @default("")
  website             String     @default("")
  address             String     @default("")
  fund                String     @default("")
  features            Json?      @default("[]")
  industries          Industry[] @relation("Company_industries")
  blogs               Blog[]     @relation("Blog_company")
  typeOfCollaboration String     @default("")
  duration            String     @default("")
  status              String     @default("")
  type                String     @default("")
}

model Industry {
  id        String    @id @default(cuid())
  name      String    @unique @default("")
  companies Company[] @relation("Company_industries")
}

model Category {
  id   String @id @default(cuid())
  name String @unique @default("")
  faqs FAQ[]  @relation("FAQ_category")
}

model Tag {
  id    String @id @default(cuid())
  name  String @unique @default("")
  blogs Blog[] @relation("Blog_tags")
}
